{
  "name": "jpm",
  "version": "1.0.5",
  "description": "Jetpack Mechanic utilities for creating, testing, running and packaging Mozilla Jetpack Addons",
  "main": "index.js",
  "bin": {
    "jpm": "./bin/jpm"
  },
  "scripts": {
    "addons": "node ./test/run.js addons",
    "functional": "node ./test/run.js functional",
    "addon_runners": "node ./test/run.js addon_runners",
    "unit": "node ./test/run.js unit",
    "documentation": "mocha -t 5000 test/documentation",
    "jshint": "jshint bin/jpm lib test --exclude test/addons,test/addon_runners,test/fixtures",
    "jscs": "jscs bin/jpm lib",
    "test": "node ./test/run.js",
    "prepush": "npm run jshint && npm run jscs && npm run documentation"
  },
  "homepage": "https://github.com/mozilla-jetpack/jpm",
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla-jetpack/jpm.git"
  },
  "bugs": {
    "url": "http://github.com/mozilla-jetpack/jpm/issues"
  },
  "keywords": [
    "firefox",
    "mozilla",
    "jetpack",
    "jpm"
  ],
  "dependencies": {
    "commander": "2.9.0",
    "deepcopy": "0.5.0",
    "firefox-profile": "0.3.9",
    "fs-extra": "0.16.4",
    "fs-promise": "0.3.1",
    "fx-runner": "0.0.10",
    "jetpack-id": "0.0.4",
    "jetpack-validation": "0.0.4",
    "jpm-core": "0.0.11",
    "jsontoxml": "0.0.11",
    "jsonwebtoken": "5.4.0",
    "lodash": "3.10.1",
    "lodash.merge": "3.3.2",
    "minimatch": "3.0.0",
    "mozilla-toolkit-versioning": "0.0.2",
    "mozilla-version-comparator": "1.0.2",
    "node-watch": "0.3.4",
    "open": "0.0.5",
    "promzard": "0.3.0",
    "read": "1.0.7",
    "request": "2.67.0",
    "semver": "5.1.0",
    "tmp": "0.0.28",
    "unzip": "0.1.11",
    "when": "3.7.2",
    "xml2js": "0.4.16",
    "zip-dir": "1.0.2",
    "jszip": "2.4.0"
  },
  "devDependencies": {
    "async": "1.5.0",
    "chai": "3.4.1",
    "dive": "0.4.0",
    "glob": "5.0.3",
    "husky": "^0.10.1",
    "jscs": "^2.7.0",
    "jshint": "^2.9.1-rc1",
    "mocha": "2.3.4",
    "release-it": "2.3.1",
    "rimraf": "2.3.2",
    "teacher": "0.0.1",
    "xmldom": "0.1.19"
  },
  "author": "Jordan Santell",
  "license": "MPL-2.0",
  "locales": {
    "es": {
      "description": "Utilidades Mec√°nico Jetpack para crear, probar, ejecutar y empacar Mozilla Jetpack Addons"
    }
  }
}
